  <script>
      function showImage(index){
          var left = 0;
        var nodes = document.getElementsByClassName('image5');
        for(var i=0; i<index; i++){
            var node = nodes[i];
            left += parseFloat(node.style.width.split('px')[0]) + 10;//margin 不算在width里面
        }
        document.getElementById('imagelist').style.left = -1 * left + 'px';
      }

      var width = window.screen.width;
      var viewW = width * 0.7;

      var images = document.getElementsByClassName('image5');
      for(var i=0; i<28; i++){
        var image = images[i];
        image.style.width = viewW + 'px';
      }

      var imagelist = document.getElementById('imagelist');
      imagelist.style.width = (viewW * 28 + 300) + 'px';

      var startx, starty;
      //获得角度
      function getAngle(angx, angy) {
          return Math.atan2(angy, angx) * 180 / Math.PI;
      };

      //根据起点终点返回方向 1向上 2向下 3向左 4向右 0未滑动
      function getDirection(startx, starty, endx, endy) {
          var angx = endx - startx;
          var angy = endy - starty;
          var result = 0;

          //如果滑动距离太短
          if (Math.abs(angx) < 2 && Math.abs(angy) < 2) {
              return result;
          }

          var angle = getAngle(angx, angy);
          if (angle >= -135 && angle <= -45) {
              result = 1;
          } else if (angle > 45 && angle < 135) {
              result = 2;
          } else if ((angle >= 135 && angle <= 180) || (angle >= -180 && angle < -135)) {
              result = 3;
          } else if (angle >= -45 && angle <= 45) {
              result = 4;
          }

          return result;
      }
      //手指接触屏幕
      document.addEventListener("touchstart", function(e) {
          startx = e.touches[0].pageX;
          starty = e.touches[0].pageY;
      }, false);
      //手指离开屏幕
      var imageIndex = 0;
      document.addEventListener("touchend", function(e) {
        var user = location.search.split('user=')[1];
        var next = '';
        var prev = '/p8?user='+user;
        switch(user){
          case `1`:
            next = '/mawei1?user='+user;
            break;
          default:
            next = '/step1?user='+user;;
        }
          var endx, endy;
          endx = e.changedTouches[0].pageX;
          endy = e.changedTouches[0].pageY;
          var direction = getDirection(startx, starty, endx, endy);
          switch (direction) {
              case 0:
                  console.log("未滑动！");
                  break;
              case 1:
                  location.href = next;
                  break;
              case 2:
                  location.href = prev;
                  break;
                case 3:
                    imageIndex++;
                    if(imageIndex==28){
                      imageIndex=0;
                    }
                  break;
              case 4:
                  if(imageIndex>0 && imageIndex<28){
                    imageIndex--;
                  }
                  break;
              default:
          }
          showImage(imageIndex);
      }, false);

  </script>
